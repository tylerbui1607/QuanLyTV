<ListViewItem x:Class="Library_Management.GUI.frm_BorrowLvItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library_Management.GUI"
             mc:Ignorable="d" 
             Height="20" Padding="0" Background="WhiteSmoke" >
    <StackPanel Orientation="Horizontal">
        <TextBlock x:Name="nabook" Width="130" Text=" Clean Code"/>
        <TextBlock Width="20" Text="ID:" TextAlignment="Center"/>
        <TextBlock x:Name="idbook" Width="40" Text="0034A" TextAlignment="Left"/>
        <TextBlock Width="20" Text="SL:" TextAlignment="Center"/>
        <TextBox x:Name="slbook" Width="20" Text="1" TextAlignment="Left" Height="27" VerticalAlignment="Center" HorizontalAlignment="Center" />
        <CheckBox x:Name="checkbook" Padding="0" VerticalAlignment="Bottom" Background="#9c958e" Margin="15,0,0,0" />
    </StackPanel>
</ListViewItem>